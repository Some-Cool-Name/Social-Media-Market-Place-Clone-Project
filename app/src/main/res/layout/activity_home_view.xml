<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context=".HomeView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:gravity="center" >

        <!-- Match / Feed Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Match -->
            <Button
                android:id="@+id/btnMatch"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_white"

                android:text="@string/match"
                android:textColor="@color/grey"
                android:textIsSelectable="false"
                android:textSize="16sp"

                android:paddingLeft="10dip"
                android:gravity="start|center_vertical" />

            <!-- Feed -->
            <Button
                android:id="@+id/btnFeed"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="-41dp"
                android:layout_marginLeft="-41dp"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button"

                android:text="@string/feed"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                tools:ignore="ButtonStyle,ObsoleteLayoutParam" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="430dp"

            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="10dp"

            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"

                android:background="@drawable/image_style"
                android:src="@drawable/messi"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp">

                <!-- Name, Age -->
                <TextView
                    android:id="@+id/home_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="20dp"

                    android:textColor="@color/white"
                    android:textSize="24dp"

                    android:text="Name, Age"
                    />

                <!-- Location -->
                <TextView
                    android:id="@+id/home_location_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/home_name_text"

                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="20dp"

                    android:textColor="@color/white"
                    android:textSize="18dp"

                    android:text="Location"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Heart / Star / X -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:gravity="center"

            android:layout_marginTop="20dp">

            <!-- Heart -->
            <ImageButton
                android:id="@+id/heart"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginHorizontal="20dp"
                android:padding="10dp"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_style5"
                android:src="@drawable/ic_heart"
                android:scaleType="centerCrop" />

            <!-- Star -->
            <ImageButton
                android:id="@+id/star"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_toRightOf="@id/heart"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_style5"
                android:src="@drawable/ic_star"
                android:scaleType="centerCrop" />

            <!-- X -->
            <ImageButton
                android:id="@+id/cross"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_toRightOf="@id/star"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_style5"
                android:src="@drawable/ic_cross"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Navbar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom_navigation"
        android:background="@color/black" />

    <LinearLayout
        android:id="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        android:background="@color/white"

        android:gravity="center">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:background="@color/white"
            app:srcCompat="@drawable/home"

            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:background="@color/white"
            app:srcCompat="@drawable/ic_sparkle"

            android:onClick="Matches"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:background="@color/white"
            app:srcCompat="@drawable/chat"

            android:onClick="Chat"
            tools:ignore="VectorDrawableCompat" />


        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/white"
            app:srcCompat="@drawable/profile2"

            android:onClick="Profile"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</RelativeLayout>