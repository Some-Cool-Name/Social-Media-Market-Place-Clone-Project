<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context=".HomeView">
    <RelativeLayout
        android:id="@+id/chat_layout_1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:background="@color/white" >

        <!-- Search Bar Edit Text -->
        <EditText
            android:id="@+id/match_search_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"

            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/match_search_Button"

            android:background="@drawable/textfield_style_lightgrey_round"
            android:elevation="3dp"
            android:hint="Search..."
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#222"
            android:textSize="18sp" />

        <!-- Search Button -->
        <ImageButton
            android:id="@+id/match_search_Button"
            android:layout_width="30sp"
            android:layout_height="30sp"

            android:layout_margin="5dp"
            android:padding="8dp"

            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            style="@style/Widget.AppCompat.Button"
            android:elevation="5dp"
            android:background="@drawable/button_style_round_gradient"
            android:src="@drawable/ic_search_white"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:padding="3dp"
        android:textColor="#222"
        android:textSize="20dp"

        android:text="No users available" />


    <!--on below line we are creating a swipe
         frame layout for providing a swipe action-->

    <!-- Navbar -->
    <com.daprlabs.cardstack.SwipeFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--below widget is used for creating a swipe deck-->
        <!--in below widget card spacing is the spacing between cards
            max visible is the max number of cards which are visible
            render above is to render the cards
            rotation degree is the angle of card rotation when card is swipped-->
        <com.daprlabs.cardstack.SwipeDeck
            android:id="@+id/swipe_deck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="65dp"

            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp"
            android:padding="20dp"

            app:card_spacing="5dp"
            app:max_visible="3"
            app:render_above="true"
            app:rotation_degrees="15" />

    </com.daprlabs.cardstack.SwipeFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom_navigation"
        android:background="@color/black" />

    <LinearLayout
        android:id="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        android:background="@color/white"

        android:gravity="center">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:background="@color/white"
            app:srcCompat="@drawable/home_selected"

            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:background="@color/white"
            app:srcCompat="@drawable/ic_sparkle"

            android:onClick="Matches"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:background="@color/white"
            app:srcCompat="@drawable/chat"

            android:onClick="Chat"
            tools:ignore="VectorDrawableCompat" />


        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/white"
            app:srcCompat="@drawable/profile2"

            android:onClick="Profile"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</RelativeLayout>