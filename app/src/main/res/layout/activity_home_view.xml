<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context=".HomeView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:gravity="center" >

        // Match / Feed Button
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            // Match
            <Button
                android:id="@+id/btnMatch"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_white"

                android:text="@string/match"
                android:textColor="@color/grey"
                android:textIsSelectable="false"
                android:textSize="19sp"

                android:paddingLeft="10dip"
                android:gravity="left|center_vertical"
                ></Button>

            // Feed
            <Button
                android:id="@+id/btnFeed"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="-41dp"
                android:layout_marginLeft="-41dp"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button"

                android:text="@string/feed"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:gravity="right|center_vertical"
                android:paddingRight="25sp"
                tools:ignore="ButtonStyle,ObsoleteLayoutParam" />
        </LinearLayout>
        // **************************************************************

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        // Image
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="315dp"

            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="10dp"

            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"

                android:background="@drawable/image_style"
                android:src="@drawable/messi"
                />


        </androidx.cardview.widget.CardView>
        // **************************************************************

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            // Name, Age

            <TextView
                android:id="@+id/home_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:layout_marginLeft="35dp"

                android:textColor="@color/black"
                android:textSize="20dp"

                android:text="Name, Age"
                />

            // Location
            <TextView
                android:id="@+id/home_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/home_name_text"

                android:layout_marginTop="0dp"
                android:layout_marginLeft="35dp"

                android:textColor="@color/grey"
                android:textSize="16dp"

                android:text="Location"
                />
        </RelativeLayout>

        // Heart / Star / X
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:gravity="center"

            android:layout_marginTop="10dp">

            // Heart
            <ImageButton
                android:id="@+id/heart"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginHorizontal="20dp"
                android:padding="10dp"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_style5"
                android:src="@drawable/ic_heart"
                android:scaleType="centerCrop" />

            // Star
            <ImageButton
                android:id="@+id/star"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_toRightOf="@id/heart"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_style5"
                android:src="@drawable/ic_star"
                android:scaleType="centerCrop" />

            // X
            <ImageButton
                android:id="@+id/cross"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_toRightOf="@id/star"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"

                style="@style/Widget.AppCompat.Button"
                android:background="@drawable/button_style5"
                android:src="@drawable/ic_cross"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        // **************************************************************
    </LinearLayout>

    // Navbar
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom_navigation"
        android:background="#000000" />

    <LinearLayout
        android:id="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"

        android:gravity="center_vertical">
        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/home2"
            tools:ignore="VectorDrawableCompat" />
        <Space
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/chat"
            tools:ignore="VectorDrawableCompat" />
        <Space
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:onClick="Profile"
            app:srcCompat="@drawable/ic_baseline_person_24"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</RelativeLayout>