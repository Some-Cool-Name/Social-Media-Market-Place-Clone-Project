<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="8dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--image view for course image-->
        <ImageView
            android:id="@+id/UserPicImageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"

            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="8dp"
            android:scaleType="centerCrop" />

        <!--text view for our course name-->
        <TextView
            android:id="@+id/UserNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:padding="3dp"
            android:textColor="#222"
            android:textSize="20dp"

            android:text="Name, Age" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/userInterest1"

                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="3dp"

                android:gravity="center"
                android:text="Interest 1"
                android:textSize="16dp"
                android:textColor="@color/grey"

                android:background="@drawable/rounded" />

            <TextView
                android:id="@+id/userInterest2"

                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="3dp"

                android:gravity="center"
                android:text="Interest 2"
                android:textSize="16dp"
                android:textColor="@color/grey"

                android:background="@drawable/rounded" />

            <TextView
                android:id="@+id/userInterest3"

                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="3dp"

                android:gravity="center"
                android:text="Interest 3"
                android:textSize="16dp"
                android:textColor="@color/grey"

                android:background="@drawable/rounded" />

            <TextView
                android:id="@+id/userInterest4"

                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="3dp"

                android:gravity="center"
                android:text="Interest 4"
                android:textSize="16dp"
                android:textColor="@color/grey"

                android:background="@drawable/rounded" />

            <TextView
                android:id="@+id/userInterest5"

                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="3dp"

                android:gravity="center"
                android:text="Interest 5"
                android:textSize="16dp"
                android:textColor="@color/grey"

                android:background="@drawable/rounded" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
