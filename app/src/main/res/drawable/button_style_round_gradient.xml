<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <gradient android:angle="45" android:startColor="@color/blue2" android:endColor="@color/purple2" android:type="linear"/>

            <stroke
                android:width="2px"
                android:color="@color/lightgrey" />

            <corners android:radius="300dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="45" android:startColor="@color/blue" android:endColor="@color/purple" android:type="linear"/>

            <stroke
                android:width="2px"
                android:color="@color/lightgrey" />

            <corners android:radius="300dp" />
        </shape>
    </item>
</selector>